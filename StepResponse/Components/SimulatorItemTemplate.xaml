<UserControl x:Class="StepResponse.Components.SimulatorItemTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StepResponse.Components"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="140" d:DesignWidth="200">
    <Border Padding="6" Margin="0,4" CornerRadius="4" BorderThickness="1" BorderBrush="#DDD" Background="WhiteSmoke">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Height="22">
                <xctk:ColorPicker 
                    IsEnabled="{Binding Stopped, Mode=OneWay}"
                    SelectedColor="{Binding Color, Mode=TwoWay}" 
                    AdvancedTabHeader="True"
                    Width="40"
                    Height="22"
                      />
                <TextBlock Text="{Binding Name, Mode=OneWay}" Margin="10,0,0,0" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Params, Mode=OneWay}" FontWeight="Bold" Foreground="Gray" />
            </StackPanel>
            
            <Separator Margin="0,2,0,2"/>

            <StackPanel Orientation="Vertical" Margin="0,6,0,0" VerticalAlignment="Center" >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Output:" VerticalAlignment="Center" Width="55"/>
                    <TextBlock Text="{Binding LastOutput, StringFormat={}{0:F3}, Mode=OneWay}" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Setpoint:" VerticalAlignment="Center" Width="55"/>
                    <TextBox Text="{Binding Setpoint, Mode=TwoWay}" VerticalAlignment="Center" Width="75" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Error:" VerticalAlignment="Center" Width="55"/>
                    <TextBlock Text="{Binding LastError, StringFormat={}{0:F3}, Mode=OneWay}" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Last compute:" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding LastComputeUs, Mode=OneWay}" Margin="2,0,0,0" />
                    <TextBlock Text="μs" VerticalAlignment="Center" Margin="2,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
